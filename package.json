{
    "name": "@jveal/jest-webextension-mock",
    "version": "3.5.3",
    "description": "Mock the components of a WebExtension",
    "main": "dist/setup.js",
    "module": "src/setup.js",
    "author": "Bryan Clark <clarkbw@gmail.com> (https://twitter.com/clarkbw)",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/clarkbw/jest-webextension-mock.git"
    },
